@model Teste2.Models.Musico

@{
    ViewBag.Title = "Login";
}

<!--Links com JS E CSS-->
<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<link rel="stylesheet" type="text/css" href="~/Content/CssTrabalho/TelaLogin.css" />
<link rel="stylesheet" type="text/css" href="~/Content/CssTrabalho/FundoTest.css" />
<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
<!------ Include the above in your HEAD tag ---------->
<script>
    var msg = '@TempData["Mensagem"]';
    if (msg.length) {
        alert(msg);
    }
</script>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <!--Login do Musico-->
    <title>Login</title>
    <div class="flex-align">
        <div id="login-overlay" class="modal-dialog">
            <div id="teste" class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="textlogin">Login no Music Creation</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="well">
                                <div class="form-group">
                                    <label for="email" class="control-label">Email</label>
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email", @required = "" } })
                                    <span class="help-block"></span>
                                </div>
                                <div class="form-group">
                                    <label for="password" class="control-label">Senha</label>
                                    @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control", @placeholder = "Senha", @required = "" } })
                                    <span class="help-block"></span>
                                </div>
                                @if (ViewBag.ErroLogin != null)
                                {
                                    <a>@ViewBag.Errologin</a>
                                }
                                @if (ViewBag.Cadastro != null)
                                {
                                    <a>@ViewBag.Cadastro</a>
                                }
                                <button type="submit" class="btn btn-success btn-block">Login</button>
                                <a href="@Url.Action("Inicio")" class="btn btn-default btn-block">Volta para Inicio</a>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <p class="lead">Seu Registro é <span class="text-success">GRATUITO</span></p>
                            <ul class="list-unstyled" style="line-height: 2">
                                <li><span class="fa fa-check text-success"></span> Faça seu Login</li>
                                <li><span class="fa fa-check text-success"></span> Monte sua Banda</li>
                                <li><span class="fa fa-check text-success"></span> Tenha Rapidez e Praticidade</li>
                                <li><span class="fa fa-check text-success"></span> Cadastro Rápido</li>
                                <li><span class="fa fa-check text-success"></span> Aprovado por Francisleide</li>
                            </ul>
                            <p><a href="@Url.Action("Registrar")" class="btn btn-info btn-block">Faça seu Registro Agora!</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--Login do Musico-->


}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
