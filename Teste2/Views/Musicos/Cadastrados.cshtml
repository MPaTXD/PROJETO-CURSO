@model IEnumerable<Teste2.Models.Musico>

<!--Link CSS E JS-->

<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<link rel="stylesheet" type="text/css" href="~/Content/CssTrabalho/TelaListaCadastros.css" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css" rel='stylesheet' type='text/css'>
<link rel="stylesheet" type="text/css" href="~/Content/CssTrabalho/TelaListaTeste.css" />
<script src="~/Scripts/Trabalho/TelaLista.js"></script>
<link rel="stylesheet" type="text/css" href="~/Content/CssTrabalho/FundoTelaCadastrados.css" />

<!--Link CSS E JS-->


<!------LISTA DE MUSICOS CADASTRADOS---------->
<div class="center">
    <h1><strong>Musicos Cadastrados</strong></h1>
</div>
<title>Músicos Cadastrados</title>
<div class="container">
    <div class="row">
        <section class="content">
            <div class="col-md-8 col-md-offset-2">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="pull-right">
                            <div class="btn-group">
                                <button type="button" class="btn btn-success btn-filter" data-target="Baixista">Baixista</button>
                                <button type="button" class="btn btn-warning btn-filter" data-target="Guitarrista">Guitarrista</button>
                                <button type="button" class="btn btn-danger btn-filter" data-target="Vocalista">Vocalista</button>
                                <button type="button" class="btn btn-info btn-filter" data-target="Tecladista">Tecladista</button>
                                <button type="button" class="btn btn-filter" data-target="Baterista">Baterista</button>
                                <button type="button" class="btn btn-default btn-filter" data-target="all">Todos</button>
                            </div>
                        </div>
                        @foreach (var item in Model)
                        {
                            <div class="table-container">
                                <table class="table table-filter">
                                    <tbody>
                                        <tr data-status="@Html.DisplayFor(modelItem => item.Categoria)">
                                            <td>
                                                <div class="espaco"></div>
                                            </td>
                                            <td>
                                                <a href="javascript:;" class="star">
                                                    <i class="glyphicon glyphicon-star"></i>
                                                </a>
                                            </td>
                                            <td>
                                                <div class="media">
                                                    <a href="#" class="pull-left">
                                                        <img src="@Html.DisplayFor(modelItem => item.LinkPerfil)" class="media-photo">
                                                    </a>
                                                    <div class="media-body">
                                                        <span class="media-meta pull-right">Idade @Html.DisplayFor(modelItem => item.Idade)</span>
                                                        <h4 class="title">
                                                            @Html.DisplayFor(modelItem => item.Nome)
                                                            <span class="pull-right">(@Html.DisplayFor(modelItem => item.Categoria))</span>
                                                        </h4>
                                                        <p class="summary">@Html.DisplayFor(modelItem => item.Email)</p>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                </table>
                            </div>
                        }
                        <a href="@Url.Action("TelaMusico","Musicos")" class="btn btn-info btn-filter" role="button">Voltar</a>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

<!------LISTA DE MUSICOS CADASTRADOS---------->


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
